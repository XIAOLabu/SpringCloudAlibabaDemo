    <modelVersion>4.0.0</modelVersion>

    <artifactId>shop-common</artifactId>
    <name>shop-common</name>
    <description>公共实体类模块</description>

    <dependencies>

        <!--mybatis-->
        <dependency>
            <groupId>org.mybatis</groupId>
            <artifactId>mybatis</artifactId>
            <version>3.5.5</version>
